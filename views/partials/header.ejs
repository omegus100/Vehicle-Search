<header>
    <nav>
        <a href="/">Vehicle Search</a>
        <ul>
            <li><a href="/products">Products</a></li>
            <li><a href="/products/new">Add Products</a></li>
            <li><a href="/fitments">Fitments</a></li>
            <li><a href="/fitments/new">Add Fitments</a></li>
        </ul>
    </nav>
    <nav>
        <form action="/search" method="GET">
            <div>       
                <div>
                    <label>Year</label>         
                    <select name="year">
                      
                        <% fitments.forEach(fitment => { %>                             
                            <option class="fitment-option"    
                                    label="<%= fitment.year %>" 
                                    value="<%= fitment.year %>"
                                    data-year></option>    
                        <% }) %>
                    </select>
                </div>            
                <div>
                    <label>Make</label>  
                    <select name="make" data-previous-fitment-type="year">
          
                        <% fitments.forEach(fitment => { %>     
                            <option class="fitment-option" 
                                    label="<%= fitment.make %>" 
                                    value="<%= fitment.make %>" 
                                    data-fitment="<%= fitment.year %> <%= fitment.make %> <%= fitment.model %>"
                                    data-previous-value="<%= fitment.year %>"
                                    data-make></option>    
                        <% }) %>
                    </select>
                </div>
                <div>
                    <label>Model</label>  
                    <select name="model" data-previous-fitment-type="make">
                        
                        <% fitments.forEach(fitment => { %>     
                            <option class="fitment-option" 
                                    label="<%= fitment.model %>" 
                                    value="<%= fitment.model %>" 
                                    data-fitment="<%= fitment.year %> <%= fitment.make %> <%= fitment.model %>"
                                    data-previous-value="<%= fitment.make %>"
                                    data-model></option>    
                        <% }) %>
                    </select>
                </div>   
                <div>
                <button type="submit">Search</button>
                </div>    
            </div>
        </form>
    </nav>   
</header>
<br>
